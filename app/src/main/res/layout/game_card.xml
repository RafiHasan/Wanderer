<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/item_line21"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/line_gold_top"
                android:padding="2dp">

                <!-- the semi transparent circle on the line -->
                <TextView
                    android:id="@+id/rank123456"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:textColor="#000000">


                </TextView>

            </FrameLayout>

            <!-- the circular icon on the left -->

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image11"
                android:layout_width="90dp"
                android:layout_height="90dp"


                android:padding="4dp"

                android:src="@drawable/profile_one"

                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />


            <!-- the blue line -->


            <!-- views at the right of the blue line -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"

                android:paddingLeft="14dp">

                <TextView
                    android:id="@+id/user_name11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Darpon Islam"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/rank11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rank: Pro"
                    android:textStyle="bold" />

                <!-- other views -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="14dp">

                <ImageView
                    android:id="@+id/spot11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="14dp"

                    android:src="@drawable/ic_spot" />

                <TextView
                    android:id="@+id/spot_text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="29 spots"
                    android:textSize="7sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="14dp"
                android:orientation="vertical"
                android:paddingLeft="14dp">

                <ImageView
                    android:id="@+id/km11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="14dp"

                    android:src="@drawable/ic_km" />

                <TextView
                    android:id="@+id/km_text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="586 km"
                    android:textSize="7sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#bfbfbf" />


    </android.support.v7.widget.CardView>

</LinearLayout>