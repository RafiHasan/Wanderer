<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_album_radius">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- the circular icon on the left -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place"
            android:layout_margin="16dp"

            android:layout_marginRight="24dp"
            android:padding="4dp"
            android:background="@drawable/white_border"/>

        <!-- the blue line -->
        <FrameLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:id="@+id/item_line1"
            android:background="@drawable/line_bg_top">

            <!-- the semi transparent circle on the line -->
            <View
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle"/>

        </FrameLayout>

        <!-- views at the right of the blue line -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="alkjahslkdhalhsdlkahsdlkjhasldh"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ajkshdkashdaksdlkas" />


            <ImageView
                android:id="@+id/one"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:src="@drawable/two" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>